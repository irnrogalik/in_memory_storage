{{> header}}

{{#if numberOfItems}}
<form method="POST">
    <label for="key">Key: <input type="text" title="key" name="key"></label>
    <button type="submit">Get from storage</button>
</form>
{{else}}
    <p>The storage is empty</p>
{{/if}}

{{#if key}}
    <p>The item with <b>{{key}} = {{value}}</b></p>
{{/if}}

{{#unless isKeyExists}}
    <p>The key <b>{{key}}</b> doesn't exist in the storage</p>
{{/unless}}

{{> footer}}