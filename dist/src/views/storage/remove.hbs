{{> header}}

{{#if numberOfItems}}
<form method="POST">
    <label for="key">Key: <input type="text" title="key" name="key"></label>
    <button type="submit">Remove from storage</button>
</form>
{{else}}
  <p>The storage is empty</p>
{{/if}}

{{#ifAND isKeyExists key}}
    <p>The item with key <b>{{key}}</b> was removed</p>
{{else}}
    <p>The key <b>{{key}}</b> doesn't exist in the storage</p>
{{/ifAND}}

{{> footer}}